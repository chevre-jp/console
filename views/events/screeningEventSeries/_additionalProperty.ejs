<% additionalProperty.forEach((_, key) => { %>
<div class="form-row">
    <div class="form-group bmd-form-group col-6">
        <label class="bmd-label-static">name</label>
        <select class="form-control additionalPropertyNameSelection" name="additionalProperty[<%= key %>][name]" id="additionalProperty[<%= key %>][name]" style="width: 100%;">
            <option value="<%= additionalProperty[key].name %>" selected="selected"><%= additionalProperty[key].name %></option>
        </select>
        <% if (errors && errors[`additionalProperty[${key}].name`]) { %>
        <span class="bmd-help text-danger d-block">
            <%- errors[`additionalProperty[${key}].name`].msg %>
        </span>
        <% } %>
    </div>
    <div class="form-group bmd-form-group col-6">
        <label class="bmd-label-floating">value</label>
        <input class="form-control" name="additionalProperty[<%= key %>][value]"
            id="additionalProperty[<%= key %>][value]" maxlength=128 value="<%= additionalProperty[key].value %>">
        <% if (errors && errors[`additionalProperty[${key}].value`]) { %>
        <span class="bmd-help text-danger d-block">
            <%- errors[`additionalProperty[${key}].value`].msg %>
        </span>
        <% } %>
    </div>
</div>
<% }) %>