<%- contentFor('styles') %>
<link href="/css/simplePagination.css" rel="stylesheet">
<%- contentFor('scripts') %>
<script src="/js/jquery.simplePagination.js"></script>
<script src="/js/commonMaster.js"></script>
<script src="/js/commonMasterList.js"></script>
<script src="/js/offers/index.js"></script>
<%- contentFor('body') %>
<% /* フォーム */ %>

<div class="card card-plain">
    <div class="card-body">
        <div class="toolbar">
            <!--        Here you can write extra buttons/actions for the toolbar              -->
            <a class="btn btn-primary createOffer" href="#">
                <i class="material-icons">add</i> 登録</a>
            <% if (process.env.USE_COA === '1') { %>
            <a class="btn btn-primary importFromCOA" role="button" href="javascript:void(0)">
                <i class="material-icons">add</i>COAからインポート</a>
            <% } %>
            <a class="btn btn-primary search btn-ok" href="#">
                <i class="material-icons">refresh</i> 更新</a>
            <a class="btn btn-primary btn-downloadCSV" href="#">
                <i class="material-icons">download</i> CSV</a>
        </div>

        <%- include('./_dataTables', {}) %>
    </div>

    <div class="modal fade" id="modal-offer" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../common/master/_loading') %>