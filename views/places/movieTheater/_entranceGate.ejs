<% if (errors && errors[`hasEntranceGate`]) { %>
<div class="form-row">
    <p class="bmd-help text-danger d-block">
        <%- errors[`hasEntranceGate`].msg %>
    </p>
</div>
<% } %>

<% hasEntranceGate.forEach((place, key) => { %>
<div class="form-row">
    <div class="form-group bmd-form-group col-4">
        <label class="bmd-label-floating">コード</label>
        <input class="form-control" name="hasEntranceGate[<%= key %>][identifier]"
            id="hasEntranceGate[<%= key %>][identifier]" maxlength=64 value="<%= place.identifier %>">
        <% if (errors && errors[`hasEntranceGate[${key}].identifier`]) { %>
        <span class="bmd-help text-danger d-block">
            <%- errors[`hasEntranceGate[${key}].identifier`].msg %>
        </span>
        <% } %>
    </div>
    <div class="form-group bmd-form-group col-4">
        <label class="bmd-label-floating">名称</label>
        <input class="form-control" name="hasEntranceGate[<%= key %>][name][ja]"
            id="hasEntranceGate[<%= key %>][name][ja]" maxlength=64
            value="<%= (place.name !== undefined) ? place.name.ja : '' %>">
        <% if (errors && errors[`hasEntranceGate[${key}].name.ja`]) { %>
        <span class="bmd-help text-danger d-block">
            <%- errors[`hasEntranceGate[${key}].name.ja`].msg %>
        </span>
        <% } %>
    </div>
    <div class="form-group bmd-form-group col-4">
        <label class="bmd-label-floating">英語名称</label>
        <input class="form-control" name="hasEntranceGate[<%= key %>][name][en]"
            id="hasEntranceGate[<%= key %>][name][en]" maxlength=64
            value="<%= (place.name !== undefined) ? place.name.en : '' %>">
        <% if (errors && errors[`hasEntranceGate[${key}].name.en`]) { %>
        <span class="bmd-help text-danger d-block">
            <%- errors[`hasEntranceGate[${key}].name.en`].msg %>
        </span>
        <% } %>
    </div>
</div>
<% }) %>